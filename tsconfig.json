{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "noImplicitAny": true,
      "baseUrl": "./",
      "paths": {
        "@app/*": ["src/*", "lib/*"],
      },
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["src"], 
    "exclude": ["node_modules", "**/__tests__/*"]
  }